<?xml version="1.0" encoding="utf-8"?>
<openerp>
   <data>

      <record id="gsos_audit_view_form" model="ir.ui.view">
         <field name="name">gsos.audit.form</field>
         <field name="model">gsos.audit</field>
         <field name="arch" type="xml">
            <form string="Audit">
               <header>
                  <field name="state" widget="statusbar" clickable="True"/>
               </header>
               <sheet>
                  <div class="oe_title">
                     <h1>
                        <field name="name" readonly="1"/>
                     </h1>
                  </div>
                  <group>
                     <group>
                        <field name="user_id" groups="gsos.group_gsos_manager" />
                        <field name="checklist_id" options="{'no_quick_create': True, 'no_create': True}" />
                        <field name="supplier_id" options="{'no_quick_create': True, 'no_create': True}" />
                     </group>
                     <group>
                        <field name="date_start" />
                     </group>
                  </group>
                  <group string="Report Summary" attrs="{'invisible': [('state', '!=', 'done')]}">
                     <group>
                        <field name="report_score" />
                        <field name="report_file_url" />
                     </group>
                  </group>
                  <notebook attrs="{'invisible': [('state', '!=', 'done')]}">
                      <page string="Sections">
                          <field name="report_sections">
                              <tree>
                                  <field name="name" />
                                  <field name="score" />
                                </tree>
                          </field>
                      </page>
                  </notebook>
               </sheet>
               <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="message_ids" widget="mail_thread"/>
               </div>
            </form>
         </field>
      </record>

   </data>
</openerp>
